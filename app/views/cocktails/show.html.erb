<div class="container text-center padded content">
  <h1><%= @cocktail.name %></h1>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h2>Add a dose:</h2>
      <%= simple_form_for([@cocktail, @dose]) do |f| %>
        <%= f.input :ingredient_id, collection: Ingredient.all, placeholder: "Ingrediente"%>
        <%= f.input :description, placeholder: "DescricÃ£o" %>
        <%= f.input :amount, placeholder: "Quantidade" %>
        <%= f.button :submit, class: "btn btn-primary"  %>
        <%= link_to 'Back to Cocktails', cocktails_path, class: "btn btn-primary"  %>
      <% end %>
    </div>
  </div>
</div>

  <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h2>List of doses of <%= @cocktail.name %> </h2>
      <% @cocktail.doses.each do |dose| %>
        <p>
        <div class="input-group-addon">
          <input type="radio">
            <%= dose.ingredient.name %> - <%= dose.description %> | <%= dose.amount %>
            <%= link_to 'Edit', edit_dose_path(dose) %>
            <%= link_to 'Destroy', dose_path(dose), method: :delete %>
        </div>
        </p>
      <% end %>
  </div>
</div>

