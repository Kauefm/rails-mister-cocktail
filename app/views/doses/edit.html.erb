
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1> <%= @dose.cocktail.name %> </h1>
      <%= simple_form_for(@dose) do |f| %>
        <%= f.input :ingredient_id, collection: Ingredient.all %>
        <%= f.input :description %>
        <%= f.input :amount %>
        <%= f.button :submit, class: "btn btn-primary"  %>
      <% end %>
    </div>
  </div>
</div>
